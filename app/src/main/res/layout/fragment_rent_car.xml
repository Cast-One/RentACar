<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Vehicles.CarCatalog.Car.ActionsCarFragment"
    android:orientation="vertical">

    <View
        android:id="@+id/void_Screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.9"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle de VehÃ­culo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/baja"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_cars"
            android:layout_marginTop="20dp"
            android:autofillHints="name"
            tools:ignore="LabelFor"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Dar de baja"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/mantenimiento"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_cars"
            android:layout_marginTop="20dp"
            android:autofillHints="name"
            tools:ignore="LabelFor"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Enviar a mantenmiento"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/seguro"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_cars"
            android:layout_marginTop="20dp"
            android:autofillHints="name"
            tools:ignore="LabelFor"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Asignar Seguro"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/robo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_cars"
            android:layout_marginTop="20dp"
            android:autofillHints="name"
            tools:ignore="LabelFor"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Reporte de Robo"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/venta"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_cars"
            android:layout_marginTop="50dp"
            android:autofillHints="name"
            tools:ignore="LabelFor"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Venta"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/renta"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_cars"
            android:layout_marginTop="20dp"
            android:autofillHints="name"
            tools:ignore="LabelFor"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Renta"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/entrega"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_cars"
            android:layout_marginTop="20dp"
            android:autofillHints="name"
            tools:ignore="LabelFor"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Entrega"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:paddingHorizontal="10dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>