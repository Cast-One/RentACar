<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/touch_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_cars">

        <ImageView
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_default_cat"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/white"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/white"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/ano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/kilometraje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/matriccula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/placa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/tipoAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/seguro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            tools:ignore="SmallSp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearStatus"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@id/touch_linear"
        app:layout_constraintEnd_toEndOf="@id/touch_linear"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/touch_linear"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Mantenimiento"
            android:textColor="@color/black"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>